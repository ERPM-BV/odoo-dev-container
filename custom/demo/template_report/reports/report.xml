<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="report_template_example_form" model="ir.ui.view">
        <field name="name">report.template.example.form</field>
        <field name="model">report.template.example</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="report_template_example_tree" model="ir.ui.view">
        <field name="name">report.template.example.tree</field>
        <field name="model">report.template.example</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="report_template_example_search" model="ir.ui.view">
        <field name="name">report.template.example.search</field>
        <field name="model">report.template.example</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>
    
    <record id="action_report_template_example" model="ir.actions.act_window">
        <field name="name">Report Example</field>
        <field name="res_model">report.template.example</field>
        <field name="view_mode">tree</field>
    </record>
    <menuitem id="action_report_template_example_menu"
        action="action_report_template_example"
        parent="base.menu_reporting_dashboard"/>
</odoo>
